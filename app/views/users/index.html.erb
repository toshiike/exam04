<div class="container">
  <% if current_user.admin?%>
  <h1>先生/生徒一覧</h1>
  <% else %>
  <h1>先生一覧</h1>
  <% end %>

  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= link_to user_path(user) do %>
          ユーザ：<%= user.name %>
        <% end %>
      </br>
        <%= profile_img(user) %>
      </br>
      <% if user.id != current_user.id %>
      <div class="item">
        <%= link_to '＊メッセージを送る＊', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: 'btn btn-sm btn-success'%>
      </div>
      </div>
      <% end %>
  <% end %>
</div>
